{
    "version": 2,
    "builds": [
      {
        "src": "Server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build" 
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "Server/index.js" },
      { "src": "/(.*)", "dest": "/$1" }
    ]
  }