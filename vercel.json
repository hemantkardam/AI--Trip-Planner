{
    "version": 2,
    "builds": [
      {
        "src": "Server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build" 
        }
      }
    ],
    "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "Server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/build/index.html"
    }
  ]

  }